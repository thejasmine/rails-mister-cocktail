<div class="container">
  <div class="row my-3">
    <div class="col-xs-12 col-sm-8 offset-sm-2">
      <h3>Add new Dose to <%= @cocktail.name %> </h3>
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <div class="form-inputs">
          <%= f.input :description %>
          <%= f.association :ingredient %>
        </div>
        <div class="form-actions">
          <%= f.button :submit %>
        </div>
      <% end %>
      <%= link_to 'Back to Main', cocktails_path(@cocktail) %>
    </div>
  </div>
</div>